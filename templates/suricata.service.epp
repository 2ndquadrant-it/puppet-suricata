[Unit]
Description=Suricata Intrusion Detection Service
After=syslog.target network-online.target


[Service]
ExecStart=/sbin/suricata -c <%= "${::suricata::config_dir}/${::suricata::config_name}" %> <% if $::suricata::interfaces { %> <%= $::suricata::interfaces.join('-i ') %> <% } %>
User=<%= $::suricata::user %>

[Install]
WantedBy=multi-user.target
